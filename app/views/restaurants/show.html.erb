
<div class="container my-4">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category%></p>

  <p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>
<br>

<%= link_to 'create a review', restaurant_reviews_path(@restaurant), class: "btn btn-outline-secondary" %>
  <%= link_to 'back to list', restaurants_path, class: "btn btn-outline-secondary" %>
</div>
